---
import Layout from '../layouts/Layout.astro';
import { Animes } from '../data/data';
---

<Layout title="Endpoint GetAllAnimes Documentation">
	<div class="w-full flex flex-col justify-center items-center mt-4 font-black">
		<h2 class="font-bold text-4xl text-white">Get an Specific Anime with its Characters</h2>
		<main class="w-8/12 flex flex-col items-center gap-6">
			<h4 class="font-bold text-3xl text-white">EndPoint to Get an Specific Anime with its Characters</h4>
            <p class="text-white font-bold text-md text-pretty text-center">This Endpoint works with the DB animeId, so in order to make it easy you can just click on one of the animes below, and it will automaticaly redirect you to the appropriate Endpoint</p>
            <ul style={{scrollbarWidth: "none"}} class="w-10/12 h-24 overflow-auto flex flex-col items-start">
                {
                    Animes.map(anime => 
                        <a target="_blank" href={`/api/animeAndCharacters.json?animeId=${anime.id}`}>
                            <li>
                                <code>
                                    {anime.name}
                                </code>
                            </li>
                        </a>
                    )
                }
            </ul>
        </main>
	</div>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
    code{
        background-color: #343434;
        padding: .25rem .25rem;
        font-family: Menlo, Consolas, Monaco, Liberation Mono, Lucida Console, monospace;
        font-size: 0.833rem;
    }
</style>
